@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script>

    <script>
        //document.getElementById("OpeningDate").valueAsDate = new Date();
        $(document).ready(function () {
            $('.select2').select2();
        });

        $(document).on('change', '#LoanInfoId', function () {
            if ($('#LoanInfoId').val() != 0) {
                GetLoanFinancialDetails();
            }

        });
        $(document).on('change', '#TransactionDate', function () {
            if ($('#LoanInfoId').val() != 0) {
                GetLoanFinancialDetails();
            }

        });


        function GetLoanFinancialDetails() {

            var loanInfoId = $('#LoanInfoId').val();
            var transactionDate = $('#TransactionDate').val();
           
            $.ajax
                ({
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("GetLoanFinancialDetails")',
                    data: { loanInfoId: loanInfoId, transactionDate: transactionDate },
                    success: function (response) {
                        console.log(response);
                      
                        if (response.length > 0) {
                            $('#Balance').val(response[0].balance);
                            $('#Suspense').val(response[0].suspense);
                            $('#InterestAmount').val(response[0].interestAmount);
                        }
                      
                

                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                }
                );


        };
       
        function decimalCheck(element, event) {
            result = (event.charCode >= 48 && event.charCode <= 57) || event.charCode === 46;
            if (result) {
                let t = element.value;
                if (t === '' && event.charCode === 46) {
                    return false;
                }
                let dotIndex = t.indexOf(".");
                let valueLength = t.length;
                if (dotIndex > 0) {
                    if (dotIndex + 2 < valueLength) {
                        return false;
                    } else {
                        return true;
                    }
                } else if (dotIndex === 0) {
                    return false;
                } else {
                    return true;
                }
            } else {
                return false;
            }
        }
    </script>
}
