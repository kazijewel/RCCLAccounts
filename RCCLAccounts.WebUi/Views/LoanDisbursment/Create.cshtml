<div class="row row-sm">
    <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
        <div class="card  box-shadow-0">
            <div class="card-header">
                <h4 class="card-title mb-1">Loan Disbursment</h4>
                @*<p class="mb-2">It is Very Easy to Customize and it uses in your website apllication.</p>*@
            </div>
            <div class="card-body pt-0">
                <form class="form-horizontal" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">TransactionDate</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <input class="form-control" placeholder="" asp-for="TransactionDate" id="TransactionDate" type="date" value="@ViewData["Datum"]">
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Loan</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select Employee" asp-for="LoanInfoId" id="LoanInfoId" asp-items="@(ViewBag.LoanAccount as SelectList)">
                            </select>
                          
                            <span asp-validation-for="LoanInfoId" class="text-danger"> </span>
                        </div>
                    </div>
                    

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Transaction Type</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select" asp-for="TransactionType" asp-items="@(ViewBag.TransactionType)">
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger"> </span>
                        </div>
                    </div>
                    
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Transaction Mode</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select" asp-for="TransactionMode" asp-items="@(ViewBag.TransactionMode)">
                            </select>
                            <span asp-validation-for="TransactionMode" class="text-danger"> </span>
                        </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                    <div class="col-md-4">
                            <label class="form-label mg-b-0">Cheque No</label>
                        
                    </div>
                     <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <input class="form-control" asp-for="ChequeNo">
                         <span asp-validation-for="ChequeNo" class="text-danger"> </span>
                    </div>

                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0" >Cheque Date</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <input class="form-control" placeholder="" asp-for="ChequeDate" id="ChequeDate" type="date" value="@ViewData["Datum"]">
                        </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                    <div class="col-md-4">
                        <label class="form-label mg-b-0">Particulars</label>
                    </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <textarea class="form-control" placeholder="Particulars" rows="3" asp-for="Narration"></textarea>
                        <span asp-validation-for="Narration" class="text-danger"> </span>
                    </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                    <div class="col-md-4">
                        <label class="form-label mg-b-0" >Amount</label>
                    </div>
                    <div class="col-md-8">
                        @*<input class="form-control only-currency" placeholder="Amount" type="text" asp-for="Amount">*@
                            <input asp-for="Amount" autocomplete="off" type="number" class="form-control text-right" id="Amount" step=".01" min="0" onkeypress="return decimalCheck(this, event);" />
                        <span asp-validation-for="Amount" class="text-danger" />
                    </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-2">
                            <label class="form-label mg-b-0">Balance</label>
                        </div>
                        <div class="col-md-4">
                            
                            <input asp-for="Balance" autocomplete="off" type="number" class="form-control text-right" id="Balance"  onkeypress="return decimalCheck(this, event);" readonly/>
                            
                        </div>
                        <div class="col-md-2">
                            <label class="form-label mg-b-0">Suspense</label>
                        </div>
                        <div class="col-md-4">

                            <input asp-for="Suspense" autocomplete="off" type="number" class="form-control text-right" id="Suspense" onkeypress="return decimalCheck(this, event);" readonly />

                        </div>
                        
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Interest</label>
                        </div>
                        <div class="col-md-8">

                            <input asp-for="InterestAmount" autocomplete="off" type="number" class="form-control text-right" id="InterestAmount" onkeypress="return decimalCheck(this, event);" readonly />

                        </div>
                    </div>

                    <div class="form-group mb-0 mt-3 justify-content-end">
                        <div>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-check2-circle"></i>    Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

