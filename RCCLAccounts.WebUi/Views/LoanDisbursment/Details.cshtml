        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Narration)
        </dd>

        <dt class="col-sm-2">
            <label class="form-label mg-b-0">Dr Amount</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrAmount)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label mg-b-0">Cr Amount</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CrAmount)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label mg-b-0">Interest</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InterestAmount)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label mg-b-0">Suspense</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suspense)
        </dd>

    </dl>
</div>
