<div class="modal fade" id="cashReceived" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:80%" role="document">
        <div class="modal-content" style="display: flow-root;">
            <div class="modal-header">
                <h4 class="modal-title">Cash Received Voucher</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

            </div>
            <div class="modal-body">
                <form class="form-horizontal form-bordered" autocomplete="off">
                    <input type="hidden" id="autoId" />
                    <input type="hidden" id="transactionId" />
                    <input type="hidden" id="voucherNo" />
                    <input type="hidden" id="upload" />
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="row row-xs align-items-center mg-b-20">
                                <label class="col-sm-4 control-label">Received From:</label>
                                <div class="col-sm-8">
                                    <input id="receivedFrom" onkeypress="return focusScript(event, '.ledgerselect')" class="form-control input-sm" />
                                </div>

                            </div>
                            <div class="row row-xs align-items-center mg-b-20">
                                <label class="col-sm-4 control-label"><span style="color: #FF0000;">*</span>Cash A/C:</label>
                                <div class="col-sm-8">
                                    @*<select data-plugin-selectTwo id="cash" class="form-control input-sm cash">
                                    </select>*@
                                    <select class="form-control form-select select2 input-sm cash" id="cash">
                                    </select>
                                </div>

                            </div>
                            <div class="row row-xs align-items-center mg-b-20">
                                <label class="col-sm-4 control-label"><span style="color: #FF0000;">*</span>Date:</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                        <input type="date" id="date" class="form-control input-sm datepick" />
                                    </div>
                                </div>
                            </div>
                            @*<div class="form-group">
                            <label class="col-sm-4 control-label">Budget:</label>
                            <div class="col-sm-8 ">
                            <div class="col-sm-4" style="padding: 0px 0px;">
                            <input id="budget" class="form-control input-sm" readonly />
                            </div>
                            <div class="col-sm-4">
                            <label class="control-label">Balance:</label>
                            </div>
                            <div class="col-sm-4" style="padding: 0px 0px;">
                            <input id="balance" class="form-control input-sm" readonly />
                            </div>
                            </div>
                            </div>*@
                        </div>
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="media-gallery">
                                <div class="row mg-files" style="padding: 0;">
                                    <div class="isotope-item document col-sm-12 col-md-12 col-lg-12">
                                        <div class="thumbnail" style="margin: 0;" id="dropthumbnail" ondrop="drop(event)" ondragover="allowDrop(event)" ondragleave="leaveDrop(event)">
                                            <div class="thumb-preview">
                                                <a href="" class="thumb-image attachmentlink" download="">
                                                    <img src="~/images/common/default-image.png" class="img-responsive attachmentshow" alt="Attachment" style="width: 55%;">

                                                </a>

                                                <div class="mg-thumb-options">
                                                    <div class="mg-zoom"><i class="fas fa-search"></i></div> <!-- Changed to Font Awesome 5 icon -->
                                                    <div class="mg-toolbar">
                                                        <div class="mg-group float-end">
                                                            <!-- Bootstrap 5 uses 'float-end' instead of 'pull-right' -->
                                                            <button class="dropdown-toggle mg-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                <i class="fas fa-caret-up"></i> <!-- Changed to Font Awesome 5 icon -->
                                                            </button>
                                                            <ul class="dropdown-menu mg-menu">
                                                                <li>
                                                                    <a href="#" class="attachmentlink" download>
                                                                        <i class="fas fa-download"></i> Download
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#" onclick="clearAttachment()">
                                                                        <i class="fas fa-trash-alt"></i> Delete <!-- Changed to Font Awesome 5 trash icon -->
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="text-center" style="border: 1px dashed #ccc;margin-top:5px;">
                                                <div class="image-upload" style="margin: 5px;">
                                                    <label for="attachmentUP" style="background: #0088cc; color: #fff; cursor: pointer; padding: 7px; border-radius: 7px; text-align: center;width: 75px;">
                                                        <i class="fa fa-camera fa-lg" aria-hidden="true" style="font-size: 1em !important;"></i>
                                                        <span> Select </span>
                                                    </label>
                                                    <input type="file" name="task-attachment" id="attachmentUP" accept="image/*,.pdf,capture=camera" class="form-control" runat="server" />
                                                </div>
                                                <div class="mg-description">
                                                    <small class="text-muted">Drop files here to start uploading</small>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col" style="float:right;">
                            <a class="btn btn-primary" id="btnAddRow"><i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <table class="table table-bordered table-striped"
                               style="max-height: 400px;
                                    display: inline-block;
                                    overflow-y: auto;"
                               id="gridCashReceived">
                            <thead>
                                <tr>
                                    <th class="no-sort" style="width:40%" id="ledgerCodeName">Ledger Code Name</th>
                                    <th class="no-sort" style="width:20%" id="budget"></th>
                                    <th class="no-sort" style="width:20%" id="balance"></th>
                                    <th class="no-sort" style="width:20%" id="creditAmount">Credit Amount</th>
                                    <th class="no-sort" style="width:5%" id="remove"></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <label class="col-sm-4 control-label">Description:</label>
                        <div class="col-sm-8 autocomplete" style="padding: 0;">
                            <input type="text" class="form-control" id="description" />
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-sm-12">
                            (<span style="color: #FF0000;">*</span>) <span style="font-style:italic;">All asterisk are mendatory</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer customFooter">
                <div id="add">
                    <partial name="_ModalButtonCreateWithPreview" />
                </div>
                <div id="edit">
                    <partial name="_ModalButtonEditWithPreview" />
                </div>
            </div>
        </div>
    </div>
</div>


<script asp-append-version="true" src="~/assets/js/jscommon/examples.mediagallery.js"></script>
<script asp-append-version="true" src="~/assets/js/jscommon/fileupload.js"></script>

