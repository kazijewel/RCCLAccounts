@model RCCLAccounts.Core.Models.EmployeeCpfledgerModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error ! </strong>   @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<!-- breadcrumb -->
<div class="breadcrumb-header justify-content-between">
    <div class="left-content">
        <span class="main-content-title mg-b-0 mg-b-lg-1">CPF Withdraw</span>
    </div>
    <div class="justify-content-center mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item tx-15"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">CPF Withdraw</li>
        </ol>
    </div>
</div>
<!-- /breadcrumb -->
<div class="row row-sm">
    <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
        <div class="card  box-shadow-0">
            <div class="card-header">
                <h4 class="card-title mb-1">CPF Withdraw</h4>
                @*<p class="mb-2">It is Very Easy to Customize and it uses in your website apllication.</p>*@
            </div>
            <div class="card-body pt-0">
                <form class="form-horizontal" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="TransactionId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Transaction Date</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <input class="form-control" placeholder="" asp-for="TransactionDate" id="TransactionDate" type="date" value="@ViewData["DatumTr"]">
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Empolyee Name</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select Employee" asp-for="EmpolyeeId" asp-items="@(ViewBag.Empolyee as SelectList)">
                            </select>
                          
                            <span asp-validation-for="EmpolyeeId" class="text-danger"> </span>
                        </div>
                    </div>
                    

                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Transaction Type</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select" asp-for="TransactionType" asp-items="@(ViewBag.TransactionType)">
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger"> </span>
                        </div>
                    </div>
                    
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="form-label mg-b-0">Transaction Mode</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                            <select class="form-control form-select select2" data-bs-placeholder="Please Select" asp-for="TransactionMode" asp-items="@(ViewBag.TransactionMode)">
                            </select>
                            <span asp-validation-for="TransactionMode" class="text-danger"> </span>
                        </div>
                    </div>

                

                    <div class="row row-xs align-items-center mg-b-20">
                    <div class="col-md-4">
                        <label class="form-label mg-b-0">Particulars</label>
                    </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <textarea class="form-control" placeholder="Particulars" rows="3" asp-for="Narration"></textarea>
                        <span asp-validation-for="Narration" class="text-danger"> </span>
                    </div>
                    </div>

                    <div class="row row-xs align-items-center mg-b-20">
                    <div class="col-md-4">
                        <label class="form-label mg-b-0" >Withdraw Amount</label>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control only-currency" placeholder="Amount" type="text" asp-for="DrAmount">
                            <span asp-validation-for="DrAmount" />
                    </div>
                    </div>

                    <div class="form-group mb-0 mt-3 justify-content-end">
                        <div>
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i>   Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
