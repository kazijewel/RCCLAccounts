<style>
    .btn-export {
        top: 10px;
        left: 50px;
        background: green !important;
        border: none !important;
        color: #fff !important;
        font-size: 14px !important;
        padding: 6px 5px !important;
    }
</style>


@model IEnumerable<RCCLAccounts.Core.Models.EmployeeCPFOpeningModel>
@{
    ViewData["Title"] = "Index";
}

<!-- breadcrumb -->
<div class="breadcrumb-header justify-content-between">
    <div class="left-content">
        <span class="main-content-title mg-b-0 mg-b-lg-1">CPF Opening</span>
    </div>
    <div class="justify-content-center mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item tx-15"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">CPF Opening</li>
        </ol>
    </div>
</div>
<!-- /breadcrumb -->
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success" id="success-alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>

        <button type="button" class="close" data-dismiss="alert">x</button>

        <strong>Success! </strong> @TempData["AlertMessage"]
    </div>

}

<div>
    <button type="button" asp-action="Create" class="btn btn-info"><a asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Create New</a></button>
    <br /><br />
</div>
<!-- Row -->
<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">         
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap key-buttons border-bottom dataTable no-footer dtr-inline collapsed" id="file-datatable">
                        <thead>
                            <tr>
                                <th class="wd-30p">Employee Name</th>
                                <th class="wd-30p">Opening Date</th>
                                <th class="wd-30p">Own Contibution</th>
                                <th class="wd-30p">Own Profit</th>
                                <th class="wd-30p">RCCL Contibution</th>
                                <th class="wd-30p">RCCL Profit</th>                               
                                <th class="wd-40p text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmpolyeeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpeningDate)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.OpOwnDepositeAmt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpInterestDistributionAmt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpRCCLContributionAmt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpRCCLInterestDistributionAmt)
                                    </td>

                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg" style="color:red;"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-desktop fa-lg" style="color:green;"></i></a> |
                                        <a href="javascript:void(0)" class="delete-btn" data-id="@item.Id"><i class="fa fa-trash-alt fa-lg" style="color:blue;"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <!-- Internal  Sweet-Alert js -->
    <script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script>

    <script src="~/assets/plugins/datatable/js/jquery.datatables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/datatables.bootstrap5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/datatables.buttons.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jszip.min.js"></script>

    <script src="~/assets/plugins/datatable/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.colvis.min.js"></script>
    <script src="~/assets/plugins/datatable/datatables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/assets/js/table-data.js"></script>

    <script>
        setTimeout(function () {

            // Closing the alert
            $('#success-alert').alert('close');
        }, 5000);

        $(document).ready(function () {


            $('#file-datatable').DataTable({
                pageLength: 50,
                destroy: true,
                responsive: true,
                // dom: 'Bfrtip',
                //  dom: 'lBfrtip',
                dom: 'lBfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        text: '<i class="fas fa-copy"></i> Copy',
                        className: 'btn-export'
                    },
                    {
                        extend: 'csv',
                        text: '<i class="fas fa-file-csv"></i> CSV',
                        className: 'btn-export'
                    },
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel"></i></i> Excel',
                        className: 'btn-export'
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="far fa-file-pdf"></i> PDF',
                        className: 'btn-export'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Print',
                        className: 'btn-export'
                    },
                    {
                        extend: 'colvis',
                        text: '<i class="fas fa-universal-access"></i> Column Visibility',
                        className: 'btn-export'
                    }
                ],

                order: [ [0, 'desc']]

            });

            $('#file-datatable tbody').on('click', '.delete-btn', function () {
                let id = $(this).data('id');
                $('body').removeClass('timer-alert');
                swal({
                    title: "Are you sure?",
                    text: "You want to delete?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn btn-danger",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: false,
                    showLoaderOnConfirm: true
                },function () {
                    $.post('@Url.Action("Delete", "EmployeeCPFOpening")', { Id: id }, function (data) {
                        console.log(data);
                        if (data.message == "Success") {
                            swal({
                                title: "Deleted!",
                                text: "Successfully deleted",
                                type: "success"
                            },
                                function () {
                                    location.reload();
                                }
                            );
                        }
                        else {
                            swal("Error!", "Something went wrong.", "error");
                        }
                    });
                    //swal("Deleted!", "Successfully deleted.", "success");
                });
            });
        });
    </script>
}
