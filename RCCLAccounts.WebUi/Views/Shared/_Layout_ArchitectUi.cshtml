<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                @*<img src="~/assets/images/logo.png" style="max-width:150px" alt="Logo" />*@
                @*<div class="logo-src"></div>*@
                <div>
                    <h5>RCCL ACCOUNTS</h5>
                </div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>    <div class="app-header__content">
                <div class="app-header-left">
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            @*<img width="42" class="rounded-circle" src="assets/images/avatars/1.jpg" alt="">*@
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <button type="button" tabindex="0" class="dropdown-item">User Account</button>
                                            <button type="button" tabindex="0" class="dropdown-item">Settings</button>
                                            <h6 tabindex="-1" class="dropdown-header">Header</h6>
                                            <button type="button" tabindex="0" class="dropdown-item">Actions</button>
                                            <div tabindex="-1" class="dropdown-divider"></div>
                                            <button type="button" tabindex="0" class="dropdown-item">Dividers</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        Full Name
                                    </div>
                                    <div class="widget-subheading">
                                        Managing Firector
                                    </div>
                                </div>
                                <div class="widget-content-right header-user-info ml-3">
                                    <button type="button" class="btn-shadow p-1 btn btn-primary btn-sm show-toastr-example">
                                        <i class="fa text-white fa-calendar pr-1 pl-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<partial name="_ThemeSetting" />*@
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            @{
                                var action = ViewContext.RouteData.Values["Action"].ToString();
                                var controller = ViewContext.RouteData.Values["Controller"].ToString();
                                var url = controller + "/" + action;
                            }
                            <li class="app-sidebar__heading">Dashboards</li>
                            <li>
                                <a class="@(url == "Home/Index" ? "mm-active" : "")" asp-controller="Home" asp-action="Index">
                                    <i class="metismenu-icon pe-7s-home"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Setup</li>
                            <li class="@((url == "SupplierInfoes/Index" || url == "Stores/Index"|| url == "Brands/Index") ? "mm-active" : "")">
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-settings"></i>
                                    General Setup
                                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                </a>
                                <ul>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="metismenu-icon"></i>
                                            Company Information
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="metismenu-icon"></i>
                                            User Create
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="metismenu-icon"></i>
                                            Party Information
                                        </a>
                                    </li>
                                    <li>
                                        <a class="@(url == "SupplierInfoes/Index" ? "mm-active" : "")" asp-controller="SupplierInfoes" asp-action="Index">
                                            <i class="metismenu-icon"></i>
                                            Supplier Information
                                        </a>
                                    </li>

                                    <li>
                                        <a class="@(url == "Stores/Index" ? "mm-active" : "")" asp-controller="Stores" asp-action="Index">
                                            <i class="metismenu-icon"></i>
                                            Store Information
                                        </a>
                                    </li>
                                    <li>
                                        <a class="@(url == "Brands/Index" ? "mm-active" : "")" asp-controller="Brands" asp-action="Index">
                                            <i class="metismenu-icon"></i>
                                            Brand Information
                                        </a>
                                    </li>

                                </ul>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-bookmarks"></i>
                                    General Report
                                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                </a>
                                <ul>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="metismenu-icon"></i>
                                            Party Report
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="metismenu-icon"></i>
                                            Supplier Report
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    @RenderBody()
                </div>
                @*<div class="app-wrapper-footer">
                <div class="app-footer">
                <div class="app-footer__inner">

                <div class="app-footer-right">
                <ul class="nav">
                <li class="nav-item">
                <a href="javascript:void(0);" class="nav-link">
                <div class="badge badge-success mr-1 ml-0">
                <small>NEW</small>
                </div>
                Footer Link 4
                </a>
                </li>
                </ul>
                </div>
                </div>
                </div>
                </div>*@
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/assets/scripts/main.js"></script>
    <script src="~/assets/scripts/JSPrintManager.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bluebird/3.3.5/bluebird.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
