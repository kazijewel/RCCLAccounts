
<style>
   
</style>



<div class="row row-sm">
    <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
        <div class="card  box-shadow-0">
            <div class="card-header">
                <h4 class="card-title mb-1">Opening Trail Balance</h4>
             
            </div>
            <div class="card-body pt-0">
                <form >

                    <div class="row row-xs align-items-center mg-b-20" id="openingTrialBalance" >
                        <div class="col-md-4 mg-t-5 mg-md-t-0">
                            <label class="form-label mg-b-0">Fiscal Year : </label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <select id="fiscalYear" name="fiscalYear" data-bs-placeholder="Please Select An Option"  class="form-control form-select select2">
                                </select>
                            
                          </div>
                       
                    </div>

                    <div class="row row-xs align-items-center mg-b-20" id="ComonWithValue" style="margin-bottom: 5px;">
                        <div class="col-md-12 mg-t-6 mg-md-t-0">
                            <label class="radio-inline">
                                <input type="radio" id="withWithout" value="With Value" name="withWithout" checked>With Value
                            </label>
                            <label class="radio-inline">
                                <input type="radio" id="withWithout" value="Without Value" name="withWithout">Without Value
                            </label>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



<div id="preview" class="row">
    <div class="col-md-12" style="text-align: center">
        <a onclick="callReport()" class="btn btn btn-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Report">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Preview
        </a>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-outline-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-skip-start-btn-fill" viewBox="0 0 16 16">
                <path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm9.71-6.907L7 7.028V5.5a.5.5 0 0 0-1 0v5a.5.5 0 0 0 1 0V8.972l2.71 1.935a.5.5 0 0 0 .79-.407v-5a.5.5 0 0 0-.79-.407z"></path>
            </svg>
            Back to List
        </button>
    </a>
</div>


<script asp-append-version="true" type="text/javascript">
    $(document).ready(function () {

         $('.select2').select2();

        fiscalYearLoad();
    });


    function callReport() {

 
        var type = $("input[name=withWithout]:checked").val();
        var fsl = $("#fiscalYear").val();
        var caption = $("#fiscalYear option:selected").text()
        if (type != "" && fsl != "") {
            var url = "/Report/OpeningTrailBalance?fiscalYearId="
                + fsl + "&fiscalYear=" + caption.split('-')[2].trim() + "&balanceType=" + type.split(' ')[0].trim();
            reportView(url);
            console.log(url);
        }
    }

    function fiscalYearLoad() {
        var url = "/Report/fiscalYearLoad";
        $.getJSON(url, function (data) {
            var item = "";
            $("#fiscalYear").empty();
            $("#fiscalYear").html(item);
            $.each(data, function (i, opt) {
                item += '<option value="' + opt.value + '">' + opt.text + '</option>'
            });
            $("#fiscalYear").html(item);
        });
    }

</script>
